{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Logging": {
      "LogLevel": {
        "ReverseProxy": "Debug"
      }
    },
    "Routes": {
      "adminRoute": {
        "ClusterId": "clusterAdmin",
        "Match": {
          "Path": "/admin/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/admin/"    
          },
          {
            "PathPattern": "{**catch-all}"
          },
          {
            "ResponseHeader": "Source",
            "Append": "YARP",
            "When": "Success"
          }
        ]
      }
    },
    "Clusters": {
      "clusterAdmin": {
        "Destinations": {
          "destination1": {
            //"Address": "http://weatherforecast-admin:8080",
            "Address": "http://51.20.76.93:8084"
            //"Address": "http://localhost:5200"
          }
        }
      }
    }
  }
}
